def cool_person_traits(cool, funny, smart, kind, name11):
  if cool in ['cool']:
    print("I always knew you were!")
  time.sleep(3)
  if funny in ['VERY funny']:
    funny = input("Oh, you think so too? y/n")
    if funny == "y":
      print("Hahaha, you always believed anything I said ¯\_(ツ)_/¯")
    if funny == "n":
      print("awh, that's fine.")
  time.sleep(3)
  if smart in ['smart']:
    print("Yes, you are not smol brain \o/")
  time.sleep(3)
  if kind in ['kind']:
    print("Hm, you always did take care of other people before yourself.")

cool_person_traits("cool", "VERY funny", "smart", "kind", "mekhi")


