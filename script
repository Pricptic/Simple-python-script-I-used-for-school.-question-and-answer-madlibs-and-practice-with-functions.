import time

def is_these_things(name1, age, gender):
    if age >= 12:
        print("Okay, you're good to go.")
    else:
      print("Unfortunately we can't let you through, due to age.")
    if name1 in ['Mekhi']:
      print(f"Hey, welcome back {name1}, I hear that you are still {age}, it must suck right?")
    if gender in ['male', 'female']:
      print("Okay, here it looks like you are " + gender)
    else:
      ("Okay, you do not have a valid gender, and our system cannot recognize it. We will let you continue.")

is_these_things("Mekhi", 12, "male")

